<Context>

 <Valve className="org.apache.catalina.valves.AccessLogValve"
                   fileDateFormat="yyyy-MM-dd"
                   prefix="icentral." suffix=".log"/>

 <Resource name="jdbc/icentral" type="javax.sql.DataSource"
                     auth="Container"
                     driverClassName="org.postgresql.Driver"
                     username="${jdbc.user}" password="${jdbc.pass}"
                     url="${jdbc.dburl}"
                     maxIdle="2" maxWait="5000" maxActive="4"/>
</Context>

    <field name="alias" type="textgen" indexed="true" stored="true" required="false" multiValued="true" />
    <field name="identifiers" type="string" indexed="true" stored="true" required="false" multiValued="true" />
    <field name="pubauth" type="string" indexed="true" stored="true" required="false" multiValued="true" />
    <field name="pubid" type="string" indexed="true" stored="true" required="false" multiValued="true" />
    <field name="taxidA" type="string" indexed="true" stored="true" required="false" multiValued="true" />
    <field name="taxidB" type="string" indexed="true" stored="true" required="false" multiValued="true" />
    <field name="species" type="string" indexed="true" stored="true" required="false" multiValued="true" />
    <field name="type" type="string" indexed="true" stored="true" required="false" multiValued="true" />
    <field name="detmethod" type="string" indexed="true" stored="true" required="false" multiValued="true" />
    <field name="interaction_id" type="string" indexed="true" stored="true" required="false" multiValued="true" />
    
    <field name="text" type="string" indexed="true" stored="false" multiValued="true"/>
    <field name="mitab" type="string" indexed="false" stored="true" multiValued="false"/>

  </fields>
  <uniqueKey>pid</uniqueKey>

  <defaultSearchField>text</defaultSearchField>
  <solrQueryParser defaultOperator="AND"/>

</schema>

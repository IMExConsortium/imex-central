 <bean id="statusAction" scope="prototype"
       class="edu.ucla.mbi.imex.central.struts.action.StatusAction">
  <property name="context">
   <map>
    <entry key="cache" value="on"/>
   </map>
  </property>
 </bean>

-->
</beans>
